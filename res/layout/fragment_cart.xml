<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="vertical" android:layout_width="fill_parent"
 android:layout_height="fill_parent" android:background="#ffffff">
 <TextView android:id="@+id/TextView01" 
    android:layout_width="fill_parent"
    android:background="#8B0000" 
  android:layout_height="wrap_content" 
  android:textColor="#FFFFFF"
  android:textSize="24dip" 
  android:text="Your Order"></TextView>
 <ListView android:layout_height="wrap_content"
  android:layout_weight="1" android:id="@+id/ListViewCatalog"
  android:layout_width="fill_parent" android:background="#ffffff"
  android:entries="@array/sports_array"
  android:clickable="true" android:cacheColorHint="#ffffff">
 </ListView>
 
  <TextView android:id="@+id/TextView02" android:layout_width="wrap_content"
  android:layout_height="wrap_content" android:textColor="#000000"
  android:textSize="24dip" android:layout_margin="5dip" android:text="Tax...........................$.99"></TextView>
 
   <TextView android:id="@+id/TextView03" android:layout_width="wrap_content"
  android:layout_height="wrap_content" android:textColor="#000000"
  android:textSize="24dip" android:layout_margin="5dip" android:text="Total...........................$10.97"></TextView>
 
 
 
 
 <Button android:layout_width="wrap_content"
  android:layout_height="wrap_content" android:layout_margin="5dip"
  android:layout_gravity="right" android:id="@+id/ButtonViewCart"
  android:text="Checkout"></Button>
</LinearLayout>