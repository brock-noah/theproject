<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/welcome0"
    tools:context="com.cs185.theproject.Main$PlaceholderFragment" >

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#8B0000"
      	android:textSize="36dp"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_motto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/motto"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <RelativeLayout
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="200dp"
        android:gravity="center" >

	    <TextView
	        android:id="@+id/tv_currloc"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/tv_hardcore"
	        android:paddingBottom="10dp"
	        android:text="Is your location..."
	        android:textColor="#8B0000" />

	     <Button
	         android:id="@+id/button_go"
	         style="?android:attr/buttonStyleSmall"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_alignParentRight="true"
	         android:layout_alignParentTop="true"
	         android:onClick="myMethod"
	         android:text="Go" />

	     <TextView
	         android:id="@+id/tv_hardcore"
	         android:layout_width="135dp"
	         android:layout_height="wrap_content"
	         android:layout_alignBaseline="@+id/button_go"
	         android:layout_alignBottom="@+id/button_go"
	         android:layout_alignParentLeft="true"
	         android:text="@string/location_costco"
	         android:textAppearance="?android:attr/textAppearanceMedium" />
           	</RelativeLayout>
	     

    <TextView
        android:id="@+id/tv_diffloc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a different location..."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#8B0000" />

    <Spinner
        android:id="@+id/spinner_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
</LinearLayout>